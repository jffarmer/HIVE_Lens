<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_alignParentBottom="true">
    <ImageView android:layout_width="wrap_content" 
        android:layout_height="wrap_content" android:src="@drawable/modis"/>
    
        <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:weightSum="1.0" >
    
    
    
    <Button android:layout_width="0dp" android:layout_weight=".5" android:layout_height="50dp"  android:background="@drawable/selector_camera_button"
        android:text="SatNet" android:textColor="@color/White" android:onClick="satNetModis"/>
    <Button android:layout_width="0dp" android:layout_weight=".5" android:layout_height="50dp"  android:background="@drawable/selector_camera_button"
        android:text="Dismiss" android:textColor="@color/White" android:onClick="dismissListener"/>
        </LinearLayout>
</LinearLayout>